{
    "name": "andkom/php-bitcoin-address",
    "description": "A simple P2PK, P2PKH, P2SH, P2WPKH, P2WSH output script/address generator.",
    "type": "library",
    "keywords": [
        "bitcoin",
        "address",
        "generator"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Andrei Komarov"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-gmp": "*",
        "btccom/cashaddress": "^0.0.3",
        "brooksyang/bech32m": "^1.0",
        "stephenhill/base58": "^1.1",
        "shanecurran/phpecc": "^0.0.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": ">=5.7",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "AndKom\\Bitcoin\\Address\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AndKom\\Bitcoin\\Address\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "lint": [
            "phpcbf || true",
            "phpcs || true",
            "phpstan"
        ]
    }
}
